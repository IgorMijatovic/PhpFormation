{% extends 'layout.twig' %}

{% block body %}

<h1>Mon compte</h1>

    {% if flash('success') %}
        <div class="alert alert-success">
            {{ flash('success') }}
        </div>
    {% endif %}

    <form action="" method="post">
        {{ csrf_input() }}
        {{ field('firstname', user.firstname, 'Prenom') }}
        {{ field('lastname', user.lastname, 'Nom') }}
        <h2>Changez de mot de passe</h2>
        <p>Laissez vide pour ne rien changer</p>
        {{ field('password', null, 'Mot de passe', {type: 'password'}) }}
        {{ field('password_confirm', null, 'Confirmation de mot de passe', {type: 'password'}) }}
        <button class="btn btn-primary">Modifiez mes informations</button>
    </form>

{% endblock %}